<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pokedex</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/home.css" />
</head>

<body class="bg-neutral-50">
  <main class="h-full grid grid-cols-1 pokemon-container">
    <header class="pokemon-searchbar-title max-h-600 h-75-vh min-h-300 flex w-full flex-col items-center justify-start bg-poke-pattern bg-cover bg-center bg-no-repeat">
      <!-- title -->
      <h1 class="mt-16 text-5xl tablet:text-6xl md:text-8xl font_pokemon text-yellow-300">Pokedex</h1>
      <!-- search bar -->
      <div class="mt-16 flex w-full max-w-80-p min-w-300 lg:max-w-lg md:max-w-md items-center justify-center">
        <!-- search input wrapper -->
        <div class="relative w-full group">
          <i class="group-focus-within:text-sky-400 fa-solid fa-magnifying-glass pointer-events-none text-neutral-400 absolute top-1/2 left-4 -translate-y-1/2"></i>
          <input class="js-search-input w-full p-4 pl-12 rounded-lg md:rounded-r-none md:rounded-l-2xl placeholder:text-neutral-400" type="text" placeholder="look for your favorite pokemon" />
        </div>
        <!-- button -->
        <button class="js-search-btn hidden md:block rounded-r-2xl bg-sky-400 hover:bg-sky-500 active:bg-sky-600 transition-colors duration-100 ease-in p-4 font-medium text-neutral-50">
          search
        </button>
      </div>
    </header>
    <!--cards container  -->
    <section class="pokemon-cards-wrapper m-auto max-w-screen-2xl grid grid-cols-auto grid-content-center grid-items-center gap-6 ">
      <% content.forEach(function(pokemon){ %>
        <!-- card -->
        <a class="mx-4 shadow-lg rounded-3xl overflow-auto bg-gradient-to-t <%-`from-${pokemon.color}-300 to-${pokemon.color}-500`%> " href=<%-`http://localhost:8080/pokemon/${pokemon.name}`_%> >
          <!-- header -->
          <div class=" mb-12 flex justify-between items-center">
            <h3 class="py-2 px-4 rounded-tl-3xl rounded-br-lg bg-neutral-900 text-neutral-50">
              <% if (Number(pokemon.id)>= 10 && Number(pokemon.id) < 100) { %>
                  No.0<%-pokemon.id%>
                    <% } else if ( Number(pokemon.id)>= 100 ) { %>
                      No.<%-pokemon.id%>
                        <% } else { %>
                          No.00<%-pokemon.id%>
                            <% }; %>
            </h3>
            <i class="mx-4 fa-solid fa-arrow-up-right-from-square text-neutral-50"></i>
          </div>
          <!-- img section -->
          <div class="mb-6 w-full relative flex justify-center items-center">
            <div class="w-52 h-52 rounded-full <%-`bg-${pokemon.color}-600`%>"></div>
            <img class="object-cover max-w-200 w-full h-full absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" src="<%- pokemon.url %>" alt="pokemon image">
          </div>
          <!-- name and chips -->
          <div class="w-full mb-6">
            <h2 class="text-xl text-neutral-900 font-medium text-center mb-4">
              <%-pokemon.name%>
            </h2>
            <!-- chips -->
            <div class="flex justify-evenly items-center flex-wrap">
              <% for(let type in pokemon.types){ %>
                <p class="rounded-full px-6 py-1 <%-`bg-${pokemon.types[type]}-600`%> text-sm text-neutral-50">
                  <%- type %>
                </p>
                <% }; %>
            </div>
          </div>
        </a>
        <% }); %>
    </section>
  </main>
  <script src="./search.js"></script>
</body>

</html>